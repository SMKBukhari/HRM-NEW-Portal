// =============================================
// ATTENDANCE CALCULATION HISTORY MODELS
// =============================================

enum CalculationStatus {
  Pending
  Approved
  Rejected
  Restored
  PartiallyRestored
}

enum CalculationActionType {
  UnauthorizedAbsence
  LateArrival
  EarlyExit
  SandwichDay
  HalfLeaveDeduction
  LeaveCredit
  LateCountUpdate
  LeaveBalanceDeduction
  BreakDeduction
}

model AttendanceCalculationHistory {
  id           String      @id @unique @default(cuid())
  calculatedBy String
  calculator   UserProfile @relation("CalculationHistory", fields: [calculatedBy], references: [userId], onDelete: Cascade)

  // Calculation parameters
  dateFrom    DateTime
  dateTo      DateTime
  employeeIds String   @db.LongText // JSON array of employee IDs

  // Calculation results summary
  totalEmployees                Float
  totalDaysChecked              Float
  totalUnauthorizedAbsences     Float
  totalLateArrivals             Float
  totalEarlyExits               Float
  totalLeavesDeducted           Float
  totalSandwichDays             Float
  totalSandwichDeductions       Float
  totalHalfLeaveDeductionsLate  Float
  totalHalfLeaveDeductionsEarly Float
  totalHalfLeaveDeductions      Float
  totalCreditedLeaves           Float
  totalCreditedLeaveCount       Float

  // Status and approval
  status     CalculationStatus @default(Pending)
  approvedBy String?
  approvedAt DateTime?
  rejectedBy String?
  rejectedAt DateTime?
  restoredBy String?
  restoredAt DateTime?

  // Relations
  employeeResults AttendanceCalculationEmployeeResult[]
  actions         AttendanceCalculationAction[]
  activities      ActivityLog[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AttendanceCalculationEmployeeResult {
  id            String                       @id @unique @default(cuid())
  calculationId String
  calculation   AttendanceCalculationHistory @relation(fields: [calculationId], references: [id], onDelete: Cascade)

  // Employee details
  userId   String
  fullName String

  // Calculation results
  totalDaysChecked                Int
  unauthorizedAbsences            String @db.LongText // JSON array of dates
  lateArrivals                    String @db.LongText // JSON array of dates
  earlyExits                      String @db.LongText // JSON array of dates
  leavesDeducted                  Float
  sandwichDays                    String @db.LongText // JSON array of dates
  sandwichDeductions              Float
  halfLeaveDeductionsLate         Float
  halfLeaveDeductionsEarly        Float
  totalHalfLeaveDeductions        Float
  unauthorizedHalfLeaveDatesLate  String @db.LongText // JSON array of dates
  unauthorizedHalfLeaveDatesEarly String @db.LongText // JSON array of dates
  creditedLeaves                  String @db.LongText // JSON array of dates
  creditedLeaveCount              Float

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AttendanceCalculationAction {
  id            String                       @id @unique @default(cuid())
  calculationId String
  calculation   AttendanceCalculationHistory @relation(fields: [calculationId], references: [id], onDelete: Cascade)

  // Action details
  actionType   CalculationActionType
  userId       String // Employee affected
  fullName     String
  date         DateTime
  description  String                @db.LongText
  leaveAmount  Float? // Amount of leaves to deduct/credit (0.5 for half, 1.0 for full)
  breakDetails Json?

  // Reconciliation fields
  reconciledType String? // "OfficialWork" | "PersonalBreak" | "UnexplainedBreak"
  reconciledBy   String?
  reconciledAt   DateTime?

  // Status tracking
  isApplied  Boolean   @default(false)
  appliedAt  DateTime?
  isRestored Boolean   @default(false)
  restoredAt DateTime?
  restoredBy String?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ActivityLog {
  id     String      @id @unique @default(cuid())
  userId String
  user   UserProfile @relation(fields: [userId], references: [userId], onDelete: Cascade)

  // This is where the admin's decision is stored
  type ActivityType @default(UnexplainedBreak)

  // The actual times of the break
  startTime       DateTime
  endTime         DateTime
  durationMinutes Int // Store the calculated duration

  // Link to the calculation it belongs to for easy lookup
  calculationId String?
  calculation   AttendanceCalculationHistory? @relation(fields: [calculationId], references: [id], onDelete: SetNull)

  // Status fields
  isDeducted Boolean @default(false)
  isApproved Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

