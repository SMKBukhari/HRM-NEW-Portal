model Project {
  id          String  @id @unique @default(cuid())
  title       String
  slug        String  @unique
  description String? @db.LongText

  // Project details
  status    ProjectStatus @default(InProgress)
  priority  Priority      @default(Medium)
  startDate DateTime?
  endDate   DateTime?
  deadline  DateTime?

  // Project settings
  isPublic   Boolean? @default(false) // If true, visible to all department members
  allowGuest Boolean? @default(false)

  // Budget and resources
  budget Float?
  spent  Float? @default(0)

  // Relations
  createdById  String
  createdBy    UserProfile @relation("ProjectCreatedBy", fields: [createdById], references: [userId], onDelete: Cascade)
  departmentId String?
  department   Department? @relation(fields: [departmentId], references: [id])

  // Project team members
  teamMembers ProjectMember[]

  // Project content
  tasks       Task[]
  comments    ProjectComment[]
  attachments ProjectAttachment[]
  favorites   ProjectFavorite[]
  activities  ProjectActivity[]
  invitations ProjectInvitation[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdById])
  @@index([departmentId])
  @@index([status])
}

model ProjectMember {
  id        String      @id @unique @default(cuid())
  projectId String
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId    String
  user      UserProfile @relation(fields: [userId], references: [userId], onDelete: Cascade)

  // Member role in project
  role String @default("Member") // Member, Lead, Contributor, etc.

  // Permissions
  canCreate Boolean @default(false) // Can be able to create tasks and sub-tasks
  canEdit   Boolean @default(false) // Can be able to edit all project details
  canDelete Boolean @default(false) // Can be able to delete the project
  canAssign Boolean @default(false) // Can be able to assign tasks to others (invite members)

  // Timestamps
  joinedAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([projectId, userId])
  @@index([projectId])
  @@index([userId])
}

model Task {
  id          String  @id @unique @default(cuid())
  title       String
  description String? @db.LongText
  code        String? @unique // Task code like "TASK-001"

  // Task details
  status   TaskStatus @default(InProgress)
  priority Priority   @default(Medium)
  taskType TaskType   @default(DailyTask)

  // Dates
  startDate DateTime?
  endDate   DateTime?
  deadline  DateTime?

  // Task metadata
  estimatedHours Float?
  actualHours    Float? @default(0)
  progress       Int?   @default(0) // 0-100 percentage
  orderIndex     Int?   @default(0) // For manual ordering

  // Relations
  projectId    String?
  project      Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  parentTaskId String?
  parentTask   Task?    @relation("SubTasks", fields: [parentTaskId], references: [id])

  // Assignment
  assignedById String?
  assignedBy   UserProfile? @relation("TaskAssignedBy", fields: [assignedById], references: [userId])
  departmentId String?
  department   Department?  @relation(fields: [departmentId], references: [id])

  // Task content
  createdById String
  createdBy   UserProfile      @relation("TaskCreatedBy", fields: [createdById], references: [userId], onDelete: Cascade)
  subtasks    Task[]           @relation("SubTasks")
  comments    TaskComment[]
  attachments TaskAttachment[]
  favorites   TaskFavorite[]
  activities  TaskActivity[]
  timeLogs    TimeLog[]
  taskMembers TaskMember[]

  // For magazine/story specific fields
  storyUrl    String?
  storyTitle  String?
  contentType String? // "story", "article", "post", etc.

  isApproved   Boolean?     @default(false)
  approvedById String?
  approvedBy   UserProfile? @relation("TaskApprovedBy", fields: [approvedById], references: [userId])
  approvedAt   DateTime?

  isCompleted   Boolean      @default(false)
  completedById String?
  completedBy   UserProfile? @relation("TaskCompletedBy", fields: [completedById], references: [userId])
  completedAt   DateTime?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
  @@index([createdById])
  @@index([departmentId])
  @@index([status])
  @@index([taskType])
}

model TaskMember {
  id     String      @id @unique @default(cuid())
  taskId String
  task   Task        @relation(fields: [taskId], references: [id], onDelete: Cascade)
  userId String
  user   UserProfile @relation(fields: [userId], references: [userId], onDelete: Cascade)

