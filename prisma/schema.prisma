// =============================================
// ENUM DEFINITIONS
// =============================================

enum Gender {
  Male
  Female
  Other
}

enum NotificationType {
  General
  Task
  Event
  Announcement
  ProfileUpdate
  UserCreation
  Verification
  RoleChange
  Alert
  Achievement
  Reminder
  Reward
  Security
  Contract
}

enum NotificationCreator {
  Applicant
  Admin
  CEO
  Manager
  Employee
  Account
}

enum LeaveStatus {
  Pending
  Approved
  Rejected
  Canceled
  PendingHigherApproval
}

enum ResignationStatus {
  Pending
  Approved
  Rejected
  Canceled
}

enum RequestStatus {
  Pending
  Approved
  Rejected
  Completed
  InProgress
  Recomended
}

enum ShiftType {
