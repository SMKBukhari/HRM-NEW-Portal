  Evening
  Off
}

enum ContractRenewalStatus {
  Pending
  Accepted
  Rejected
  Expired
  Withdrawn
}

// =============================================
// MEETING ENUMS
// =============================================

enum MeetingType {
  Virtual
  Physical
}

enum MeetingStatus {
  Scheduled
  InProgress
  Completed
  Cancelled
}

enum MeetingPriority {
  Low
  Medium
  High
  Urgent
}

enum RecurringType {
  Daily
  Weekly
  Monthly
  Yearly
}

enum VisibilityType {
